<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <PreferenceCategory
        android:title="@string/settings_map_details"
        android:key="settings_map_details">
        
        <ToggleButton
            android:id="@+id/show_legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Legend On"
            android:textOff="Legend Off"
            android:onClick="onToggleClickedLegend" />
        
        <ToggleButton
            android:id="@+id/highlight_objects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Highlight On"
            android:textOff="Highlight Off"
            android:onClick="onToggleClickedHighlight" />
        
    </PreferenceCategory>
	<PreferenceCategory
	    android:title="@string/settings_import_export"
	    android:key="settings_import_export">
	    
	   <ListView
	       android:id="@+id/import_map"
	       android:title="@string/import_map"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content" />
	   
	   <ListView
	       android:id="@+id/export_map"
	       android:title="@string/export_map"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content" />
	      
	 </PreferenceCategory>
</PreferenceScreen>
